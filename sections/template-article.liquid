<h1>{{ article.title }}</h1>

{% if section.settings.enable_author %}
  <small>{{ article.author }}</small>
{% endif %}

{% if section.settings.enable_published_date %}
  <time datetime="{{ article.published_at | date: '%d-%m-%y' }}">{{ article.published_at | date: '%d-%m-%y' }}</time>
{% endif %}

<img src="{{ article.image | img_url: 'large' }}" alt="{{ article.image.alt }}" loading="lazy">

<div class="">{{ article.content }}</div>

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      }, {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Published Date"
      }
    ]
  }
{% endschema %}